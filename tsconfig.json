{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vscode"],
    "rootDir": "src",        
    "outDir": "out",          
    "sourceMap": true         
  },
  "include": ["src"],    
  "exclude": ["node_modules"]
}

